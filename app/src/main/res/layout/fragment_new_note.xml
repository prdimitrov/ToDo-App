<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.NewNoteFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/newNoteFragment_cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ffffff"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/newNoteFragment_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">
            
            <EditText
                android:id="@+id/newNoteFragment_noteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your title"
                android:inputType="text"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@android:color/transparent"
                style="bold"/>

            <EditText
                android:id="@+id/newNoteFragment_noteBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Write something here..."
                android:inputType="text"
                android:gravity="start|top"
                android:textColor="#000000"
                android:textColorHint="@color/hintColor"
                android:background="@android:color/transparent"
                style="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>